{
  "compilerOptions": {
    "baseUrl": "./",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators":true,
    "moduleResolution": "node",
    "stripInternal": false,
    "target": "es5",
    "module": "es6",
    "lib": [
        "es5",
        "es2015",
        "es2016", "es2017",
        "dom"
    ]
  },
  "include": ["./app/", "./isdk/"]
}